<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="root" dividerPositions="0.5" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
  <items>
      <VBox>
         <children>
            <TableView fx:id="studentTableView" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Nombre" />
                <TableColumn fx:id="surnameColumn" prefWidth="75.0" text="Apellidos" />
                  <TableColumn fx:id="birthdareColumn" prefWidth="75.0" text="Fecha de nacimiento" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="NEVER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onNewAction" text="Nuevo">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/add-32x32.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                  <Button mnemonicParsing="false" onAction="#onDeleteAction" text="Eliminar">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/del-32x32.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <BorderPane fx:id="studentSelectionPane">
         <center>
            <Label text="Seleccione un alumno en la tabla de la izquierda." />
         </center>
      </BorderPane>
  </items>
</SplitPane>
